{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}
{% form_theme form 'BloggerBlogBundle:Form:fields.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact symblog</h1>
    </header>

    {% if app.session.hasFlash('blogger-notice') %}
        <div class="blogger-notice">
            {{ app.session.flash('blogger-notice') }}
        </div>
    {% endif %}

    <p>Want to contact symblog?</p>

    <form class="form-horizontal blogger" action="{{ path('BloggerBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} >

        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Submit" />
        </div>

    </form>
{% endblock %}
